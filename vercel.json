{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://novels-mini.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Accept"
        }
      ]
    }
  ],
  "env": {
    "TELEGRAM_BOT_TOKEN": "7654045113:AAEnQRFkj302E-S40YM8F49r4PHd-zvxqO4",
    "APP_URL": "https://novels-mini.vercel.app",
    "NEXT_PUBLIC_BOT_USERNAME": "novels_reader_bot"
  }
}
